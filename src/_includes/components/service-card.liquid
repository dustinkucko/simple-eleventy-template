<!-- Service Card Component -->
{% comment %}
  Usage: {% include "components/service-card.liquid", icon: "target", title: "Service Title", description: "Service description...", delay: "0.1s" %}
{% endcomment %}

<div class="animate-on-scroll group" {% if delay %}style="animation-delay: {{ delay }};"{% endif %}>
  <div class="bg-white rounded-xl p-8 border border-gray-100 hover:border-primary-200 hover:shadow-lg transition-all duration-300 h-full">
    <div class="flex items-center justify-center w-12 h-12 bg-primary-100 rounded-lg mb-6 group-hover:bg-primary-200 transition-colors duration-300">
      <i data-lucide="{{ icon }}" class="h-6 w-6 text-primary-600"></i>
    </div>
    <h3 class="text-xl font-semibold text-gray-900 mb-4">{{ title }}</h3>
    <p class="text-gray-600 leading-relaxed">{{ description }}</p>
  </div>
</div>
